---
import { languages } from "../i18n/ui";
---

<ul>
  {
    Object.entries(languages).map(([lang, label]) => (
      <li>
        <a href={`/${lang}/`}>{label}</a>
      </li>
    ))
  }
</ul>

<style>
  .form-select {
    display: block;
    padding: 0.625rem;
    border-radius: 0.5rem;
    border-width: 1px;
    border-color: #d1d5db;
    width: 100%;
    font-size: 0.875rem;
    line-height: 1.25rem;
    color: #fff;
    background-color: var(--accent-regular);
  }
</style>
