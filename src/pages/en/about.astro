---
import BaseLayout from "../../layouts/BaseLayout.astro";

import ContactCTA from "../../components/ContactCTA.astro";
import Hero from "../../components/Hero.astro";

import { pegarLangDeURL, usarTraducoes } from "../../i18n/utils";

const lang = pegarLangDeURL(Astro.url);
const t = usarTraducoes(lang);
---

<BaseLayout title="About | Juan Andrade" description="About Juan Andrade">
  <div class="stack gap-20">
    <main class="wrapper about">
      <Hero
        title={t("about.title")}
        tagline="Read below to learn more about my background and professional experience."
      />

      <section>
        <h2 class="section-title">Background</h2>
        <div class="content">
          <p>
            I started programming in 2018 while studying high school with a
            technical degree. Web/mobile development at <a
              href="https://www.cotemig.com.br/">Cotemig</a
            >.
          </p>
          <p>
            In 2020 I started doing an internship as a front-end developer where
            programmed in Angular, React using agile development and using
            DevOPS. In 2022 I was hired and have also been working with tests.
          </p>
        </div>
      </section>
      <section>
        <h2 class="section-title">Education</h2>
        <div class="content">
          <p>Col√©gio COTEMIG - Web/mobile development - 2018-2020.</p>
          <p>
            Faculdade PUC Minas - Analysis and systems development - 2023-2025
          </p>
        </div>
      </section>
      <section>
        <h2 class="section-title">Skills</h2>
        <div class="content">
          <p>
            Javascript, Typescript, DevOPS, CI/CD, e2e, Node, Next/React,
            Angular, MySQl, NoSql, Docker, Git, Scrum, Kanban, Jira, Confluence,
          </p>
        </div>
      </section>
    </main>

    <ContactCTA />
  </div>
</BaseLayout>

<style>
  .about {
    display: flex;
    flex-direction: column;
    gap: 3.5rem;
  }

  img {
    margin-top: 1.5rem;
    border-radius: 1.5rem;
    box-shadow: var(--shadow-md);
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    color: var(--gray-200);
  }

  .section-title {
    grid-column-start: 1;
    font-size: var(--text-xl);
    color: var(--gray-0);
  }

  .content {
    grid-column: 2 / 4;
  }

  .content :global(a) {
    text-decoration: 1px solid underline transparent;
    text-underline-offset: 0.25em;
    transition: text-decoration-color var(--theme-transition);
  }

  .content :global(a:hover),
  .content :global(a:focus) {
    text-decoration-color: currentColor;
  }

  @media (min-width: 50em) {
    .about {
      display: grid;
      grid-template-columns: 1fr 60% 1fr;
    }

    .about > :global(:first-child) {
      grid-column-start: 2;
    }

    section {
      display: contents;
      font-size: var(--text-lg);
    }
  }
</style>
